<h1>Carrito: {{cart._id}}</h1>

{{#if cart.products.length}}
  <ul>
    {{#each cart.products}}
      <li>
        <strong>{{this.product.title}}</strong> — ${{this.product.price}} — Cantidad: {{this.quantity}}
        <form class="inline" action="/api/carts/{{../cart._id}}/products/{{this.product._id}}" method="post">
          <button formaction="/api/carts/{{../cart._id}}/products/{{this.product._id}}" formmethod="put">Editar cantidad</button>
        </form>
      </li>
    {{/each}}
  </ul>
  <form action="/api/carts/{{cart._id}}" method="delete">
    <button type="submit">Vaciar carrito</button>
  </form>
{{else}}
  <p>El carrito está vacío.</p>
{{/if}}

<p><a href="/products">Seguir comprando</a></p>
